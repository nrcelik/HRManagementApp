@model HRManagementEntities.ValueObjects.NewEmployeeViewModel
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Save", "Employees", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <b>@ViewBag.Title</b>
    <div class="row">
        <div class="col-md-12">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-3">
            @Html.LabelFor(m => m.Employee.Name, new { @class = "h6" })
        </div>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.Employee.Name)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.LabelFor(m => m.Employee.Surname, new { @class = "h6" })
        </div>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.Employee.Surname)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.LabelFor(m => m.Employee.Department.Name, new { @class = "h6" })
        </div>
        <div class="col-md-9">
            @Html.DropDownListFor(x => x.Employee.DepartmentId, Model.Departments, "Choose a Department", new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.HiddenFor(x => x.Employee.Id)
            <button name="Save" type="submit" class="btn btn-success">Save</button>
        </div>
    </div>

}
