@model HRManagement.Models.Users
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Save", "Users", FormMethod.Post))
{
    <b>@ViewBag.Message</b>
    <div class="row">
        <div class="col-md-12">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-3">
            @Html.LabelFor(m => m.UserName, new { @class = "h6" })
        </div>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.UserName)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.LabelFor(m => m.Password, new { @class = "h6" })
        </div>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.Password)
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.LabelFor(m => m.Role, new { @class = "h6" })
        </div>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.Role)
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.HiddenFor(m => m.Id)
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </div>
}
